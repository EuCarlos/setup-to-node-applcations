{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "erro",
            "tab"
        ],
        "linebreak-style": [
            "erro",
            "unix"
        ],
        "quotes": [
            "erro",
            "double"
        ],
        "semi": [
            "erro",
            "always"
        ]
    }
}
